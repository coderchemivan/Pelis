#:kivy 2.1.0

WindowManager:
    id: screen_manager
    LoginPage:
        id:login_screen
        name: 'login_page'

<LoginPage>:
    MDTextField:
        id: User
        hint_text: "Username"
        size_hint: 0.5, 0.1
        pos_hint: {"center_x": 0.5, "center_y": 0.7}
        icon_right: "account"
    MDTextField:
        id: Pass
        hint_text: "Password"
        size_hint: 0.5, 0.1
        pos_hint: {"center_x": 0.5, "center_y": 0.6}
        icon_right: "key"
        password: True
        cursor_color: 0,0,0,1
